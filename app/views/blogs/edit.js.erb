$('#add-news-event-blog-modal').html("<%= escape_javascript render 'blogs/remote_form' %>");

$('#entityModal').modal()

tinyMCE.init({
  selector: 'textarea',
  menubar: false,
  statusbar: false,
  toolbar: 'bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
  plugins: ['placeholder, link']
});


$('#blog_date').datepicker({
  dateFormat: "dd-mm-yy",
  maxDate: 0
});

$('#blog_artist_id_tags').tokenInput("/artists/token_inputs",{
  theme: "facebook",
  propertyToSearch: 'profile_name',
  hintText: 'Search for Artists'
});

$('#blog_business_id_tags').tokenInput("/businesses/token_inputs",{
  theme: "facebook",
  hintText: 'Search for Business'
});

$('#blog_event_id_tags').tokenInput("/events/token_inputs",{
  theme: "facebook",
  hintText: 'Search for Events'
});

$('#token-input-blog_artist_id_tags').attr("placeholder", "Link Artists")
$('#token-input-blog_event_id_tags').attr("placeholder", "Link Events")
$('#token-input-blog_business_id_tags').attr("placeholder", "Link Business")
